				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public DeleteComp() {
		String[] companieslist = new String[200];
		int[] theseiscp =new int[200];
		setTitle("\u0394\u0399\u0391\u0393\u03A1\u0391\u03A6\u0397 \u03A4\u039C\u0397\u039C\u0391\u03A4\u039F\u03A3");
