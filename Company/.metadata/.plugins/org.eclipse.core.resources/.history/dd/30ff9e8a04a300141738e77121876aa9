				hrname=NameHRtextField.getText();
				hrsurname=SurnameHRtextField.getText();
				hrsall=SalHRtextField.getText();
				hrphone=PhoneHRtextField.getText();
				if(hrname=="" && hrsurname=="" && hrsall=="" && hrphone==""){
					try{
						java.sql.Connection connection = DriverManager.getConnection("jdbc:mysql://83.212.120.62:3306/companies","root","1234");
