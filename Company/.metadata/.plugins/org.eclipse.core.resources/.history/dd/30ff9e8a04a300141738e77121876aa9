						PreparedStatement pst1=(PreparedStatement) connection.prepareStatement(query1);
						pst1.executeUpdate();
						pst1.close();
						JOptionPane.showMessageDialog(null, "Δημιουργήθηκε με επιτυχία το τμήμα: "+compname+" !");
						NameCompTextField.setText("");
						NameHRtextField.setText("");
						SurnameHRtextField.setText("");
						SalHRtextField.setText("");
						PhoneHRtextField.setText("");
					}catch (Exception e){
						JOptionPane.showMessageDialog(null, e);
					}
					try{
						java.sql.Connection connection = DriverManager.getConnection("jdbc:mysql://83.212.120.62:3306/companies","root","1234");
						String query2="INSERT INTO "+compname+" VALUES('"+hrname+"','"+hrsurname+"','"+hrsall+"','"+hrphone+"',null)";
						PreparedStatement pst2=(PreparedStatement) connection.prepareStatement(query2);
